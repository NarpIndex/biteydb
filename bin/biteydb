#!/usr/bin/env ruby
require 'open-uri'

# Remote base URL for biteydb-data
BITEYDB_REMOTE_BASE = "https://raw.githubusercontent.com/NarpIndex/biteydb-data/main/data"

# Get the package name from the command-line argument
package = ARGV[0]

if package.nil? || package.strip.empty?
  puts "❌ Please provide a package name."
  exit 1
end

info_url = "#{BITEYDB_REMOTE_BASE}/#{package}.txt"

begin
  info = URI.open(info_url, &:read)
  puts info
rescue OpenURI::HTTPError => e
  puts "ℹ️ No additional info found for '#{package}'."
rescue => e
  puts "❌ Error fetching package data: #{e.message}"
end
